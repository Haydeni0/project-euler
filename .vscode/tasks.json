{
    "tasks": [
        {
            // BUILD THEN RUN
            "type": "cppbuild",
            "label": "Build and run",
            "command": "${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build then run the file.",
            "dependsOn": [ // Build before running
                "Build"
            ]
        },
        {
            // BUILD
            "type": "cppbuild",
            "label": "Build",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I",
                "${workspaceFolder}\\inc",
                "${file}",
                "${workspaceFolder}\\inc\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the project."
        }
    ],
    "version": "2.0.0"
}